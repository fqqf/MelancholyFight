script/source = "extends KinematicBody2D

tool

var acceleration = 100

onready var sprite = $AnimatedSprite
onready var animationPlayer = $AnimatedSprite/AnimationPlayer
var motion = Vector2.ZERO
export (int) var MAX_SPEED = 15

func _ready():
	sprite.speed_scale = rand_range(0.9, 1.3)
	#sprite.self_modulate.a = rand_range(0,1)
	animationPlayer.seek(rand_range(0,7))
	var rand_color = rand_range(0.65, 0.9)
	sprite.self_modulate = sprite.self_modulate.darkened(rand_color)
	acceleration = rand_range(9,100)
	_set_new_chasing_point()

var chasing_point = Vector2()

var changed_scale = false

func _set_new_chasing_point():
	chasing_point = Vector2(clamp(position.x+rand_range(-40,45),-40,0),clamp(position.y+rand_range(-46,46),-40,15))
	#_set_new_chasing_point()

func _process(delta):
	if position.distance_to(chasing_point)<10:
		_set_new_chasing_point()
		changed_scale = false
		
	var direction = position.direction_to(chasing_point)
	motion += direction * acceleration * delta
	motion = motion.clamped(MAX_SPEED)
	if not changed_scale:
		scale.x = -1 if position.x < chasing_point.x else 1
		changed_scale = true
	motion = move_and_slide(motion)
"

